<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/body_text_color</item>
    </style>

    <style name="SubHeaderStyle" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey</item>
        <item name="android:layout_marginTop">@dimen/gutter</item>
        <item name="android:layout_marginBottom">@dimen/gutter</item>
    </style>

    <style name="Segment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
